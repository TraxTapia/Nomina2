    <!-- Modal -->
    <div class="modal modal-success" id="mdlNuevoEmpleado" role="dialog" aria-labelledby="myModalLabelxl">
        <div class="modal-dialog  modal-lg animated zoomIn animated-3x" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Nuevo Registro</h5>
                    <button onclick="cancelarCrear();" type="button" title="Cerrar" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="zmdi zmdi-close"></i></span></button>
                </div>
                <div class="modal-body">
                    <form id="frmEmpleadoNuevo" class="form-horizontal">
                        <div class="col-md-6 col-xl-12" spellcheck="false">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="selectPlazas">Plaza a Ocupar</label>
                                        <select class="form-control form-control-md" id="selectPlazas" name="selectPlazas">
                                            <option selected disabled value="">--Selecciona--</option>
                                            <option value="1">Plaza 1</option>
                                            <option value="2">Plaza 2</option>
                                            <option value="3">Plaza 3</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button onclick="validaTienePlaza()" type="button" class="btn btn-warning" id="btnCancelarRegistro">Avanzar</button>
                    <button onclick="cancelarCrear()" id="btnGuardarRegistroNew" type="button" class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    @*Modal editar*@
    <div class="modal modal-success" id="mdlEditEmpleado" role="dialog" aria-labelledby="myModalLabelxl">
        <div class="modal-dialog  modal-lg animated zoomIn animated-3x" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Detalle Empleado</h5>
                    <button onclick="cancelarCrear();" type="button" title="Cerrar" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="zmdi zmdi-close"></i></span></button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12 col-md-12" spellcheck="false">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" for="txtCodeEmpleadoEdit">Codigo Empleado</label>
                                    <input type="text" id="txtCodeEmpleadoEdit" class="form-control" name="txtCodeEmpleadoEdit" required>
                                </div>
                            </div>
                             <div class="col-md-3">
                                <div class="form-group">
                                  <label class="control-label" for="txtNameEmpleadoEdit">Nombre Empleado</label>
                                    <input type="text" id="txtNameEmpleadoEdit" class="form-control" name="txtNameEmpleadoEdit" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button onclick="cancelarEditar()" type="button" class="btn btn-sm btn-danger animated fadeInUp" id="btnCancelarRegistro" data-dismiss="modal">Cancelar</button>
                    <button onclick="$('#mdlEditEmpleado').submit()" id="btnGuardarRegistro" type="button" class="btn btn-sm btn-success animated fadeInUp">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal modal-success" id="mdlDetailEmpleado" role="dialog" aria-labelledby="myModalLabelxl">
